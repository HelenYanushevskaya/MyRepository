@model WebApp.Models.Dish

@{
    ViewBag.Title = "Create";
    // Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <div class="span5">
        @using (Html.BeginForm("Create", "Dish", FormMethod.Post, new { @id = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <fieldset>
                <legend></legend>
                <table>
                    <tr>
                        <td>
                            @Html.TextBoxFor(model => model.Name, new { @class = "span3", style = "display:block;width:270px;;float:left", placeholder = "Enter the name" })<br>
                            @Html.ValidationMessageFor(model => model.Name)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.TextBoxFor(model => model.Ingredients, new { @class = "span3", id = "Ingredients", placeholder = "Enter the ingredients", style = "width: 270px;" })
                            <a href="#" id="ingredientstargetinfo" rel="popover" data-content="data-contetn" data-trigger="hover" data-placement="top" data-originals-title="Ingredients"><i class="icon-info-sign"></i> </a>
                            <div id="NumberValidation"></div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.TextBoxFor(model => model.Weight, new { @class = "span3", id = "Weight", placeholder = "Enter the weight", style = "width: 270px;" })
                            <a href="#" id="weighttargetinfo" rel="popover" data-content="data-contetn" data-trigger="hover" data-placement="top" data-originals-title="Ingredients"><i class="icon-info-sign"></i> </a>
                            <div id="NumberValidation"></div>
                        </td>
                    </tr>
                    <tr><td height="20"></td></tr>
                    <tr>
                        <td>
                            <button id="submitbtn" class="btn btn-primary" value="Submit"> Create</button>&nbsp;&nbsp;
                            <button class="btn" type="reset" value="Cancel" onclick="window.location.href='@Url.Action("Index", "Home")'">Cancel</button>
                        </td>
                    </tr>

                </table>

            </fieldset>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
